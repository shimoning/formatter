{
    "name": "shimoning/formatter",
    "version": "0.5.0",
    "description": "各種変換ユーティリティ",
    "minimum-stability": "stable",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Shimon Haga",
            "email": "shimon.haga@shimoning.com"
        }
    ],
    "keywords": [
        "format",
        "clock",
        "time",
        "number",
        "numeric",
        "number_format",
        "sql",
        "string",
        "trim",
        "excel",
        "array",
        "range",
        "bound",
        "link",
        "url",
        "uri",
        "path"
